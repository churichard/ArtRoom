<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_header"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/action_bar_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/blue_navigation_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/action_bar_title_left_padding"
            android:shadowColor="@color/action_bar_title_shadow"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:textColor="@color/action_bar_title_text"
            android:textSize="@dimen/header_bar_title_size" />

        <Button
            android:id="@+id/btn_right"
            style="@style/MoxBarRightButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</FrameLayout><!-- From: file:/Users/Breeze/Downloads/Products/Android/IntelliJ/trunk/moxtrasdk/products/ConversationSDK/src/main/res/layout/action_bar_default.xml -->